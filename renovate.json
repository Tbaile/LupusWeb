{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "reviewers": [
        "Tbaile"
    ],
    "schedule": [
        "every weekend"
    ],
    "minor": {
        "automerge": true
    },
    "patch": {
        "automerge": true
    },
    "packageRules": [
        {
            "matchPackageNames": [
                "docker.io/php"
            ],
            "allowedVersions": "<= 8.1"
        },
        {
            "matchPackageNames": [
                "docker.io/composer"
            ],
            "automerge": false
        },
        {
            "matchPackageNames": [
                "docker.io/node"
            ],
            "allowedVersions": "<= 16",
            "automerge": false
        },
        {
            "matchPackageNames": [
                "docker.io/mariadb"
            ],
            "allowedVersions": "<= 10.6",
            "automerge": false
        },
        {
            "matchPackageNames": [
                "docker.io/redis"
            ],
            "allowedVersions": "<= 6",
            "automerge": false
        }
    ]
}
