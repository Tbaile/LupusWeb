{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "reviewers": [
        "Tbaile"
    ],
    "schedule": [
        "at 2:00 am every monday"
    ],
    "automergeSchedule": [
        "at 5:00 am every monday"
    ],
    "minor": {
        "automerge": true
    },
    "patch": {
        "automerge": true
    },
    "packageRules": [
        {
            "matchManagers": [
                "composer"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "groupName": "all non-major composer dependencies",
            "groupSlug": "all-composer-minor-patch"
        },
        {
            "matchManagers": [
                "dockerfile",
                "docker-compose"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "groupName": "all non-major docker dependencies",
            "groupSlug": "all-docker-minor-patch"
        },
        {
            "matchManagers": [
                "npm"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "groupName": "all non-major npm dependencies",
            "groupSlug": "all-npm-minor-patch"
        },
        {
            "matchPackageNames": [
                "php"
            ],
            "allowedVersions": "<= 8.1"
        },
        {
            "matchPackageNames": [
                "node"
            ],
            "allowedVersions": "<= 18"
        },
        {
            "matchPackageNames": [
                "mariadb"
            ],
            "allowedVersions": "<= 10.6"
        },
        {
            "matchPackageNames": [
                "redis"
            ],
            "allowedVersions": "<= 6"
        }
    ]
}
