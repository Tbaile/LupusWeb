{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        "group:allNonMajor"
    ],
    "reviewers": [
        "Tbaile"
    ],
    "schedule": [
        "every weekend"
    ],
    "patch": {
        "automerge": true
    },
    "docker": {
        "fileMatch": [
            "(^|/|\\.)Containerfile$",
            "(^|/)Containerfile[^/]*$"
        ]
    },
    "packageRules": [
        {
            "matchPackageNames": [
                "php"
            ],
            "allowedVersions": "<= 8.1"
        },
        {
            "matchPackageNames": [
                "node"
            ],
            "allowedVersions": "<= 16"
        },
        {
            "matchPackageNames": [
                "mariadb"
            ],
            "allowedVersions": "<= 10.6"
        },
        {
            "matchPackageNames": [
                "redis"
            ],
            "allowedVersions": "<= 6"
        }
    ]
}
