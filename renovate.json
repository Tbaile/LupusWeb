{
    "extends": [
        "config:base"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "npm",
                "composer"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "matchCurrentVersion": "!/^0/",
            "automerge": true
        },
        {
            "matchManagers": [
                "dockerfile"
            ],
            "matchUpdateTypes": "patch",
            "schedule": "after 3am on Monday",
            "automerge": true
        },
        {
            "matchPackageNames": [
                "php"
            ],
            "matchManagers": [
                "dockerfile"
            ],
            "matchCurrentVersion": "~8.0"
        },
        {
            "matchManagers": [
                "docker-compose"
            ],
            "enabled": false
        }
    ]
}
